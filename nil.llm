;**********************************************************************
; ParseList (private)
;
;**********************************************************************

#define CONTPROMPTARRAY_LEN 5
@contPromptArray = internal constant [CONTPROMPTARRAY_LEN x %c_char] c"--> \00"

define NILCC void
@ParseList(%Token* %retTokenPtr)
{
    ; Temporary space for the token
    %tokenPtr = alloca %Token
    %typeFieldPtr = getelementptr %Token* %tokenPtr, i32 0, i32 0
    %expFieldPtr = getelementptr %Token* %tokenPtr, i32 0, i32 1

    ; We'll need these too
    %retTypeFieldPtr = getelementptr %Token* %retTokenPtr, i32 0, i32 0
    %retExpFieldPtr = getelementptr %Token* %retTokenPtr, i32 0, i32 1
    br label %ReadToken

ReadToken:
    call NILCC void @NextToken(%Token* %tokenPtr)

    %thisType = load %c_int* %typeFieldPtr

    switch %c_int %thisType, label %CantHappen [

        %c_int NIL_EOF,        label %Exception
        %c_int NIL_IOERROR,    label %Exception
        %c_int NIL_BADCHAR,    label %Exception

        %c_int ASCII_NEWLINE,  label %Exception ; !!!

        %c_int ASCII_LPAREN,   label %BeginList
        %c_int ASCII_RPAREN,   label %EndList
        %c_int NIL_SYMBOL,     label %Symbol
        %c_int NIL_CELL,       label %CantHappen
    ]

CantHappen:
    cant_happen()
    br label %CantHappen

Exception:
    ; Die for now, until the normal logic is correct
    call ccc void @abort()
    br label %CantHappen

Newline:
    %promptStr = getelementptr [CONTPROMPTARRAY_LEN x %c_char]* @contPromptArray,
                                                                i64 0, i64 0
    call ccc %c_int @putstring(%c_char* %promptStr)
    br label %ReadToken

BeginList:
    call NILCC void @ParseList(%Token* %tokenPtr)
    %car = load %Exp* %expFieldPtr
    call NILCC void @ParseList(%Token* %tokenPtr)
    %cdr = load %Exp* %expFieldPtr
    br label %ReturnToken

EndList:
    ; We're calling 'NIL' a symbol here, which is sort of true but
    ; indicates that 'symbol' really means something like 'atom'
    store %c_int NIL_SYMBOL, %c_int* %typeFieldPtr
    store %Exp NIL, %Exp* %tokenPtr
    br label %ReturnToken

Symbol:
    %car = load %Exp* %expFieldPtr
    call NILCC void @ParseList(%Token* %tokenPtr)
    FIXME: switch on what ParseList returned
    %cdr = load %Exp* %expFieldPtr
    %cell = call NILCC %Exp @nil_cons(%Exp %car, %Exp %cdr)
    store %c_int NIL_CELL, %c_int* %retTypeFieldPtr
    store %Exp %cell, %Exp* %retExpFieldPtr
    ret void

ReturnToken:
    %token = load %Token* %tokenPtr
    store %Token %token, %Token* %retTokenPtr
    ret void
}
